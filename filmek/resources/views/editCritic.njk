{% extends "layout"%}
{% block content %}
<div id="wrapper">
    <div class="container">
        {% if not currentUser %}
        <div class="text-center"><h1>Please login to get started</h1></div>
        {% else %}
        <h2> Edit Critic </h2>
        {#{% if critic.user_id == currentUser.id %}#}
        
        <div class="col-xs-12">
            <form class="form-horizontal" role="form" method="POST" action="">
                {{ csrfField }}
                <fieldset>

                    <div class="form-group">
                    <label for="title"  class="col-xs-3 control-label">Movie Title</label>
                        <div class="col-xs-6">
                            <input type="text" class="form-control" id="title" name="title" placeholder="Critic title" value="{{ critic.title }}">
                        </div>
                    </div>


                    <div class="form-group">
                    <label for="title"  class="col-xs-3 control-label">Category</label>
                        <div class="col-xs-6">
                            <p type="text" class="form-control" id="title" name="title" placeholder="Critic title" value="{{ critic.category.name }}">{{ critic.category.name }}</p>
                        </div>
                    </div>


                    <div class="form-group">
                    <label for="category_id" class="col-xs-3 control-label">Category</label>
                        <div class="col-xs-6">
                            <select class="form-control" id="category_id" name="category_id">
                            {% for category in categories %}
                                <!--{% if critic.category.user_id == currentUser.id %}-->
                                <option value="{{ category.id }}" 
                                {% if category.id == old('category_id') %} selected {% endif %}>
                                    {{ category.name }}</option>
                                <!--{% endif %}  -->
                            {% endfor %}
                            </select>
                        </div>
                    </div> 

                    <div class="form-group">
                    <label for="title"  class="col-xs-3 control-label">Critic</label>
                        <div class="col-xs-6">

                        <div class="panel panel-default">
                            <div class="panel-body">{{ critic.description }}</div>
                        </div>
                           <!-- <input type="text" class="form-control" id="title" name="title" placeholder="Critic title" value="{{ critic.description }}">-->
                    

                        </div>
                    </div>
                    <div class="form-group">


                    <div class="form-group">
                        <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 col-xs-offset-3 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
                            <a href="/critics" type="Back" class="btn btn-default">Back to the other critics</a>
                            {% if critic.user_id == currentUser.id %}
                                 <a href="/deleteCritic/{{critic.id}}" class="btn btn-danger">Delete critic</a>
                            
                            {% endif %}
                        </div>
                    </div>



                </fieldset>
            </form>
        </div>
        {#{% else %}#}
        {#<div class="text-center"><h3>No matching critic found</h1></div>#}
        {#{% endif %}#}
        {% endif %}
        </div>
        </div>
{% endblock %}